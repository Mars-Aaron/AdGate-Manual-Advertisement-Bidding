                            <i class="nav-icon fas fa-tasks"></i>
                            <p>
                                Ad Spaces Market
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a asp-action="Index" class="nav-link">
                                    <i class="fas fa-users nav-icon"></i>
                                    <p>My Ad Spaces</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="CreateAdmin" class="nav-link">
                                    <i class="fas fa-user-cog nav-icon"></i>
                                    <p>Publish Ad Spaces</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item has-treeview">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-tasks"></i>
                            <p>
                                Affiliation
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a asp-action="Index" class="nav-link">
                                    <i class="fas fa-users nav-icon"></i>
                                    <p>Companies</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="CreateAdmin" class="nav-link">
                                    <i class="fas fa-user-cog nav-icon"></i>
                                    <p>Message Affiliates</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item has-treeview menu-open">
                        <a href="#" class="nav-link active">
                            <i class="nav-icon fas fa-tasks"></i>
                            <p>
                                Profile
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a asp-action="Index" asp-controller="AdvertiserDashboard" class="nav-link active">
                                    <i class="fas fa-users nav-icon"></i>
                                    <p>View Profile</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="EditProfile" asp-controller="AdvertiserDashboard" class="nav-link">
                                    <i class="fas fa-user-cog nav-icon"></i>
                                    <p>Edit Profile</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a data-toggle="modal" data-target="#logoutModal" class="nav-link">
                            <i class="nav-icon fas fa-sign-out-alt"></i>
                            <p>
                                Statistics
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a data-toggle="modal" data-target="#logoutModal" class="nav-link">
                            <i class="nav-icon fas fa-sign-out-alt"></i>
