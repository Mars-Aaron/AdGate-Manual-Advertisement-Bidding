            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Create Content Profile</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">Dashboard</li>
                        <li class="breadcrumb-item">Content Profile</li>
                        <li class="breadcrumb-item active">Create</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <section class="content">
        <div class="container-fluid">
            <div class="card card-dark card-outline">
                <div class="card-header">
                    <h3 class="card-title p-2">Content Profile Form</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="CreateContentProfile" asp-controller="PublisherDashboard">
                                <input type="hidden" asp-for="PublisherProfileId" value="@Model.PublisherProfileId" />
                                <div class="form-group">
                                    <label asp-for="ContentName" class="control-label"></label>
                                    <input asp-for="ContentName" class="form-control" />
                                    <span asp-validation-for="ContentName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ContentMedium" class="control-label"></label>
                                    <select asp-for="ContentMedium" asp-items="Html.GetEnumSelectList<ContentMedium>()" class="form-control"></select>
                                    <span asp-validation-for="ContentMedium" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="VisitsPerMonth" class="control-label"></label>
                                    <input asp-for="VisitsPerMonth" class="form-control" />
                                    <span asp-validation-for="VisitsPerMonth" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SelectedTags" class="control-label"></label>
                                    <select asp-for="SelectedTags" class="form-control" asp-items="Model.Tags" onchange="console.log('test')"></select>
                                    <span asp-validation-for="SelectedTags" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </section>
</div>
