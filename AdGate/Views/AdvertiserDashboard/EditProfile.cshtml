                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">Dashboard</li>
                        <li class="breadcrumb-item">Profile</li>
                        <li class="breadcrumb-item active">Edit Profile</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <section class="content">
        <div class="container-fluid">
            <div class="card card-dark card-outline">
                <div class="card-header">
                    <div class="float-left">
                        <h3 class="card-title p-2">Current Profile</h3>
                        <p class="font-italic pl-2" style="font-size: 10px">Changes Made</p>
                    </div>
                    <div class="float-right">
                        <a asp-action="Index" asp-controller="AdvertiserDashboard" class="btn btn-danger text-white" style="cursor: pointer">Cancel</a>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <form asp-action="EditProfile" asp-controller="AdvertiserDashboard" role="form" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-3">
                                <div style="position: relative;width: 150px;height:150px; margin: auto" onmouseover="$('#profilePictureOverlay').removeAttr('hidden');" onmouseout="$('#profilePictureOverlay').attr('hidden','hidden');">
                                    <img style="width:100%;height:100%;position:absolute;top:0;left:0;border-radius: 75px" src="@Model.ProfilePicture" />
                                    <div style="text-align: center; padding-top: 55.75px; width:100%;height:100%;position:absolute;top:0;left:0;z-index:10; background-color: rgba(76, 76, 76, 0.5);border-radius: 75px" id="profilePictureOverlay" hidden>
                                        <input type="button" value="Change" class="btn btn-info" onclick="$('#ppInput').removeAttr('hidden')">
                                    </div>
                                </div>
                                <div id="ppInput" class="input-group mt-5" hidden>
                                    <div class="custom-file">
                                        <input asp-for="NewProfilePicture" type="file" class="custom-file-input" id="profilePictureInput">
                                        <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 ml-5">
                                <input type="hidden" asp-for="ProfileId" />
                                <input type="hidden" asp-for="ProfilePicture" value="@Model.ProfilePicture" />
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.GivenName)
                                    </dt>
                                    <dd>
                                        <div class="input-group mb-1">
                                            <input asp-for="GivenName" type="text" class="form-control" placeholder="Given Name">
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-envelope"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="input-group mb-3">
                                            <span asp-validation-for="GivenName" class="text-danger"></span>
                                        </div>
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.FamilyName)
                                    </dt>
                                    <dd>
                                        <div class="input-group mb-1">
                                            <input asp-for="FamilyName" type="text" class="form-control" placeholder="Family Name">
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-lock"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="input-group mb-3">
                                            <span asp-validation-for="FamilyName" class="text-danger"></span>
                                        </div>
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.CompanyName)
                                    </dt>
                                    <dd>
                                        <div class="input-group mb-1">
                                            <input asp-for="CompanyName" type="text" class="form-control" placeholder="Company Name">
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-lock"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="input-group mb-3">
                                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                                        </div>
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Password)
                                    </dt>
                                    <dd>
                                        <div class="input-group mb-1">
                                            <input asp-for="Password" value="@Model.Password" type="password" class="form-control" placeholder="Password">
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-lock"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="input-group mb-3">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.ConfirmPassword)
                                    </dt>
                                    <dd>
                                        <div class="input-group mb-1">
                                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-lock"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="input-group mb-3">
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.SelectedTags)
                                    </dt>
                                    <dd>
                                        <div class="input-group mb-1">
                                            <select asp-for="SelectedTags" class="form-control" asp-items="Model.Tags" onchange="console.log('test')"></select>
                                        </div>
                                        <div class="input-group mb-3">
                                            <span asp-validation-for="SelectedTags" class="text-danger"></span>
                                        </div>
                                    </dd>
                                </dl>
                            </div>
                        </div>
                        <input type="submit" value="Save" class="btn btn-success w-25" />
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </section>
</div>